<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillTime.Views.CalendarPage"
             Title="График"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15">
        <CollectionView ItemsSource="{Binding TodayMedicines}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Name}" FontSize="18" WidthRequest="120"/>
                        <Label Text="{Binding TimesPerDay}" FontSize="14" WidthRequest="100"/>
                        <Label Text="{Binding DosePerIntake}" FontSize="14" WidthRequest="80"/>
                        <CheckBox IsChecked="{Binding IsTakenToday}" 
                          CheckedChanged="OnMedicineCheckedChanged"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </VerticalStackLayout>
</ContentPage>
