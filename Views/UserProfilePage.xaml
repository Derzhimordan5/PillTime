<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillTime.Views.UserProfilePage"
             Title="Мои данные">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Entry x:Name="GenderEntry" Placeholder="Пол (Мужской/Женский)" />
        <Entry x:Name="AgeEntry" Placeholder="Возраст" Keyboard="Numeric"/>
        <Entry x:Name="WeightEntry" Placeholder="Вес (кг)" Keyboard="Numeric"/>

        <Button Text="Сохранить" Clicked="OnSaveClicked" />

    </VerticalStackLayout>

</ContentPage>
